# Claude API Configuration
ANTHROPIC_API_KEY=your-api-key-here
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Agent Configuration
DEFAULT_MODEL=sonnet
MAX_TURNS=20
PERMISSION_MODE=acceptEdits

# Allowed Tools (comma separated)
DEFAULT_ALLOWED_TOOLS=Read,Write,Edit,Bash,Glob,Grep,WebSearch,WebFetch

# Working Directory
# WORK_DIR=/path/to/your/work/directory

# Session Configuration
SESSION_TIMEOUT_SECONDS=3600
MAX_CONCURRENT_SESSIONS=100

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# Tavily Search API (Optional)
# AI-powered search engine for web search
# TAVILY_API_KEY=your-tavily-api-key-here

# MinIO Configuration (Optional)
# For file uploads to MinIO/S3 compatible storage
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET_NAME=agentic
MINIO_REGION=us-east-1
MINIO_SECURE=false
